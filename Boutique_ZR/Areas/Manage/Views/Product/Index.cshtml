@model List<Product>
@{
    int counter = 0;
}

<div class="container">
    <div class="d-flex" style="justify-content: space-around; align-items:center">
        <h1>Products</h1>
        <a class="btn btn-success" asp-action="create" asp-controller="product">Create</a>
    </div>


    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">ImageUrl</th>
                <th scope="col">SalePrice</th>
                <th scope="col">Description</th>
                <th scope="col">SKU</th>
                <th scope="col">Category</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                counter++;
                <tr>

                    <th scope="row">@counter</th>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].ImageUrl</td>
                    <td>@Model[i].SalePrice</td>
                    <td>@Model[i].Description</td>
                    <td>@Model[i].SKU</td>
                    <td>@Model[i].Category.Name</td>
                    <td>
                        <a class="btn btn-primary" asp-action="edit" asp-controller="product" asp-route-id="@Model[i].Id">Edit</a>
                    </td>
                    <td>

                        <a class="btn btn-danger" asp-action="delete" asp-controller="product" asp-route-id="@Model[i].Id">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>